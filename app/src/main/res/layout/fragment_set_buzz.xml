<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetBuzzFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal" android:padding="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:id="@+id/timeLabel"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:fadeScrollbars="false"
            android:isScrollContainer="true"
            android:overScrollMode="always"
            android:scrollIndicators="none"
            android:scrollbarSize="0dp">
            <ImageView
                android:src="@drawable/ic_vibrate"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_vibration"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_condensed_regular"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:background="@drawable/white_circle_drawable"
                        android:textColor="#E99092"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_marginRight="3dp"
                        android:fontFamily="@font/roboto_condensed_regular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buzz1"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_condensed_regular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buzz1_description"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginLeft="3dp"
                        android:fontFamily="@font/roboto_condensed_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:background="@drawable/transparent_circle_drawable"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_marginRight="3dp"
                        android:fontFamily="@font/roboto_condensed_regular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buzz2"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_condensed_regular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buzz2_description"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginLeft="3dp"
                        android:fontFamily="@font/roboto_condensed_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:background="@drawable/transparent_circle_drawable"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_marginRight="3dp"
                        android:fontFamily="@font/roboto_condensed_regular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buzz3"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_condensed_regular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buzz3_description"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginLeft="3dp"
                        android:fontFamily="@font/roboto_condensed_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:background="@drawable/transparent_circle_drawable"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_marginRight="3dp"
                        android:fontFamily="@font/roboto_condensed_regular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buzz4"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_condensed_regular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buzz4_description"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginLeft="3dp"
                        android:fontFamily="@font/roboto_condensed_regular"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center_horizontal|center_vertical" android:layout_marginBottom="10dp">
  <ImageView
    android:layout_width="30dp"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/ic_play"
    android:id="@+id/imageView5"
    android:tint="#00FFFFFF"/>
  <TextView
    android:text="00 : 00 : 00"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/time"
    android:textColor="@color/white"
    android:textSize="18sp"
    android:fontFamily="@font/roboto_condensed_regular"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"/>
  <ImageView
    android:layout_width="30dp"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/ic_vibrate"
    android:id="@+id/imageView3"
  />
  <TextView
    android:text="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/buzzCount"
    android:textColor="@color/white"
    android:textSize="10sp" android:fontFamily="@font/roboto_condensed_regular"/>
  <ImageView
    android:layout_width="30dp"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/ic_repeat"
    android:id="@+id/imageView4"
    android:layout_marginStart="5dp"/>
</LinearLayout>